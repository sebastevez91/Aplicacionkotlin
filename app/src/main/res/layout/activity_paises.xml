<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondokotlin"
    tools:context=".PaisesActivity">

    <TextView
        android:id="@+id/idTittleApi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paises del mundo"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/idTitlePais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paises:"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/listPaises"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="111dp" />

    <Spinner
        android:id="@+id/listPaises"
        android:layout_width="218dp"
        android:layout_height="35dp"
        android:layout_marginEnd="52dp"
        app:layout_constraintBottom_toTopOf="@+id/listCapitales"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idTittleApi"
        app:layout_constraintVertical_bias="0.617" />

    <TextView
        android:id="@+id/idTitleCapitales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capital:"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/infoPais"
        app:layout_constraintEnd_toStartOf="@+id/listCapitales"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idTitlePais" />

    <Spinner
        android:id="@+id/listCapitales"
        android:layout_width="211dp"
        android:layout_height="37dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="184dp" />

    <TextView
        android:id="@+id/infoPais"
        android:layout_width="347dp"
        android:layout_height="224dp"
        android:text="InformaciÃ³n: "
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnVolverInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:text="Volver a la pagina inicio"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoPais" />
</androidx.constraintlayout.widget.ConstraintLayout>